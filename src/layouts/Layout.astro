--- 
interface Props {
	title: string;
}

const { title } = Astro.props;
import '../styles/app.css';
import AudioWidget from '../components/AudioWidget.astro';
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/site/fuego-directo-icon.png">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<AudioWidget/>
		<!-- video de fondo -->
		<video autoplay class="hidden sm:hidden xl:block" muted loop id="bg_video">
			<source src="/site/grill.mp4">
		</video>
		<div class="mask hidden sm:hidden md:block"></div>
		<slot />
	</body>
</html>



<script>
	// Variables 
	const recetarioLink = document.getElementById('recetario'),
		registroLink = document.getElementById('registro'),
		url = window.location.pathname
		
		

		if(url === '/') {
			recetarioLink.style.display = 'none'
		} else {
			recetarioLink.style.display = 'block'
		}

		console.log(recetarioLink.nodeType)
		console.log(registroLink)
</script>